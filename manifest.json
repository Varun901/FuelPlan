 {
    "name": "Trip Cost Estimator",
    "version": "1.0",
    "description": "Estimate the cost of your trip through Google Maps and a chrome extension",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "content_security_policy": "script-src 'nonce-2726c7f26c''self' https://ajax.googleapis.com; object-src 'self'",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "get_started16.png",
            "32": "get_started32.png",
            "48": "get_started48.png",
            "128": "get_started128.png"
          }
      },
      "content_scripts": [
        {
          "matches": ["*://*/*"],
          "js": ["contentScript.js"]
        }
      ],

      "icons": {
        "16": "get_started16.png",
        "32": "get_started32.png",
        "48": "get_started48.png",
        "128": "get_started128.png"
      },
      "options_page": "options.html",

    "manifest_version": 2   
    
  }